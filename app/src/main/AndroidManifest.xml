<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.infinity.confidant">
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_vpn_key_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_vpn_key_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.infinity.confidant.MainActivity"
            android:noHistory="true">
        </activity>
        <activity
            android:name="com.infinity.confidant.Activities.SetupPin"
            android:noHistory="true"></activity>
        <activity android:name="com.infinity.confidant.Activities.Land"
            android:noHistory="true"></activity>
        <activity
            android:name="com.infinity.confidant.Activities.SecreteHome"
            android:noHistory="true"></activity>
        <activity
            android:name="com.infinity.confidant.Activities.SecreteNew"
            android:noHistory="true"></activity>
        <activity
            android:name="com.infinity.confidant.Activities.SecreteEdit"
            android:noHistory="true"></activity>
        <activity
            android:name="com.infinity.confidant.Activities.SetupPinConfirm"
            android:noHistory="true"></activity>
        <activity android:name="com.infinity.confidant.Activities.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>